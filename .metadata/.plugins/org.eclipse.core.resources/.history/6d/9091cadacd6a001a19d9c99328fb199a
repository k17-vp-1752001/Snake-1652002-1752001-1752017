package predefined;

public enum Direction {
	LEFT(-1, 0),
	RIGHT(1, 0),
	UP(0, 1),
	DOWN(0, -1);
	
	public Direction(int x, int y) {
		this.x = x;
		this.y = y;
	}

	public Direction opposite() {
		switch(this) {
			case LEFT:
				return RIGHT;
			case RIGHT:
				return LEFT;
			case UP:
				return DOWN;
			case DOWN:
				return UP;
			default:
				return this;
		}
	}
	
	final int x, y;
}
